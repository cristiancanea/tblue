<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/linearLayout1" 
	android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="fill_parent" android:weightSum="1">
			  
    <!-- <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/btn_resume" android:text="Resume" android:layout_gravity="center_horizontal"></Button> -->
    <ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:src="@drawable/tetris_img_title" android:layout_height="wrap_content"></ImageView>
    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/btn_resume" android:text="Resume" android:layout_gravity="center_horizontal" android:background="#0E2A4F" android:textColor="#398DFA" android:textSize="42dp" android:textStyle="bold" android:padding="10dp" android:soundEffectsEnabled="true" android:layout_margin="5dp"></Button>
    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/btn_start" android:text="Start New" android:layout_gravity="center_horizontal" android:background="#0E2A4F" android:textColor="#398DFA" android:textSize="42dp" android:textStyle="bold" android:padding="10dp" android:soundEffectsEnabled="true" android:layout_margin="5dp"></Button>
    <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/btn_about" android:text="About" android:layout_gravity="center_horizontal" android:background="#0E2A4F" android:textColor="#398DFA" android:textSize="42dp" android:textStyle="bold" android:padding="10dp" android:layout_margin="5dp"></Button>
    <Button android:id="@+id/btn_exit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Exit" android:layout_gravity="center_horizontal" android:background="#0E2A4F" android:textSize="42dp" android:textStyle="bold" android:padding="10dp" android:layout_margin="5dp" android:textColor="#000000"></Button>

</LinearLayout>